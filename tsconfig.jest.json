{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "__test__/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "jest.setup.js",
    "__test__/jest.d.ts"
  ],
  "exclude": ["node_modules"]
}
